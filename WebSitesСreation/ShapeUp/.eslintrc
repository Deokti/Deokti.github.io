{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb/base"],
    "rules": {
        "semi": "off",
        "no-console": "off",
        "eol-last": "off",
        "linebreak-style": "off",
        "no-plusplus": "off",
        "max-len": ["error", 115, {
            "ignoreUrls": true,
            "ignoreComments": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }],
        "indent": ["error", 4],
        "prefer-destructuring": "off",
        "no-param-reassign": "off",
        "func-names": "off"
    }
}